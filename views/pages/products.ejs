<% include ../partials/header %>
<h1 class="text-center">--Product--</h1>
    <table class="table table-secondary table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Price</th>
                <th>Date</th>
                <th> <a class="btn btn-info" href="/insert" role="button">Add New</a></th>
                <th>Report</th>
                
            </tr>
        </thead>
        <tbody id="myTable">
            <% products.forEach(function(product){%>
                <tr>
                    <td scope="row">
                        <%= product.id%>
                    </td>
                    <td>
                        <%= product.title%>
                    </td>
                    <td>
                        <%= product.price%>.
                
                    </td>
                    <td>
                    <%= product.created_at%>.
            
                </td>
                    <td>
                        <a class="btn btn-secondary" href="/products/<%= product.id%>" role="button">Edit</a>
                    </td>
                   
                    <td> <a class="btn btn-info" href="/product_report/<%= product.id%>" role="button">Report</a></td>                    
                </tr>
                <%}); %>
        </tbody>
    </table>
