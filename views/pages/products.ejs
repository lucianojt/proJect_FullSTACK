<% include ../partials/header %>
<h1 class="text-center">--Product--</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Price</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(function(product){%>
                <tr>
                    <td scope="row">
                        <%= product.id%>
                    </td>
                    <td>
                        <%= product.title%>
                    </td>
                    <td>
                        <%= product.price%>
                    </td>
                    <td>
                        <a class="btn btn-primary" href="/products/<%= product.id%>" role="button">Edit</a>
                    </td>
                </tr>
                <%}); %>
        </tbody>
    </table>

    <% include ../partials/footer %>