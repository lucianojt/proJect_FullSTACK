<% include ../partials/header %>
<h1 class="text-center"><%=report[0].title %></h1>
    <table class="table">
        <thead>
            <tr>
                <th>Purchase ID</th>
                <th>Quantity</th>
                <th>Total price</th>
               
            </tr>
        </thead>
        <tbody id="myTable">
            <% report.forEach(function(report){%>
                <tr>
                    <td scope="row">
                        <%=report.purchase_id %>
                    </td>
                    <td>
                        <%=report.quantity %>
                    </td>
                    <td>
                        <%=report.price*report.quantity %>
                    </td>
                </tr>
                <%}); %>
        </tbody>
    </table>
    <script>
      $(document).ready(function(){
        $("#myInput").on("keyup", function() {
         var value = $(this).val().toLowerCase();
         $("#myTable tr").filter(function() {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
         });
       });
    });
</script>
<% include ../partials/footer %>