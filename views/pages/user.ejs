<% include ../partials/header %>
<h1 class="text-center">--User--</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Password</th>
                <th><a class="btn btn-info" href="/insert_user" role="button">Add New</a></th>
                <th>Report</th>
            </tr>
        </thead>
        <tbody id="myTable">
            <% user.forEach(function(user){%>
                <tr>
                    <td scope="row">
                        <%=user.id %>
                    </td>
                    <td>
                        <%=user.email %>
                    </td>
                    <td>
                        <%=user.password %>
                    </td>
                    <td>
                    <a class="btn btn-secondary" href="/user/<%= user.id%>" role="button">Edit</a>
                </td>
                <td> <a class="btn btn-info" href="/user_report/<%= user.id%>" role="button">Report</a></td> 
                </tr>
                <%}); %>
        </tbody>
    </table>
    <script>
      $(document).ready(function(){
        $("#myInput").on("keyup", function() {
         var value = $(this).val().toLowerCase();
         $("#myTable tr").filter(function() {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
         });
       });
    });
</script>

    <% include ../partials/footer %>