<% include ../partials/header %>
    <form action="/product/update" method="post">
        <div class="form-group">
            <label for="">ID</label>
            <input type="number" class="form-control" value="<%= product.id%>" name="id" id="" aria-describedby="helpId" placeholder="">
            <small id="helpId" class="form-text text-muted">Product ID</small>
        </div>

        <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" value="<%= product.title%>" name="title" id="" aria-describedby="helpId" placeholder="">
            <small id="helpId" class="form-text text-muted">Product title</small>
        </div>
        <div class="form-group">
            <label for="">Price</label>
            <input type="number" class="form-control" value="<%= product.price%>" name="price" id="" aria-describedby="helpId" placeholder="">
            <small id="helpId" class="form-text text-muted">Product price</small>
        </div>


        <div class="form-group">
            <label for="">Create At</label>
            <input id="datepicker" class="form-control" value="<%= product.created_at%>"  name="date" id="" aria-describedby="helpId" placeholder="">
            <script>
                $('#datepicker').datepicker({
                    uiLibrary: 'bootstrap4'
                });
            </script>
            <small id="helpId" class="form-text text-muted">Date</small>
        </div>

        <a class="btn btn-secondary" href="/products" role="button">Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-danger" onclick="return del()" href="/product_delete/<%= product.id%>" role="button">Delete</a>
        <script>
        function del() {
            confirm("Are you want to Delete!");
        }
        </script>
    </form>
    <% include ../partials/footer %>